{
    "type": "object",
    "description": "Virtual Machine",
    "properties": {
        "properties": {
            "type": "object",
            "description": "Compute Properties",
            "properties": {
                "computeType": {
                    "type": "string",
                    "description": "The type of the compute",
                    "const": "VirtualMachine"
                },
                "properties": {
                    "type": "object",
                    "description": "Virtual Machine Compute properties",
                    "properties": {
                        "sshPort": {
                            "type": "integer",
                            "description": "The exposed port for the resource. Defaults to 22",
                            "default": 22,
                            "minimum": 0
                        },
                        "address": {
                            "type": "string",
                            "description": "The address for the already existing resource"
                        },
                        "administratorAccount": {
                            "type": "object",
                            "description": "Admin credentials for Virtual Machine",
                            "properties": {
                                "username": {
                                    "type": "string",
                                    "description": "The username needed to access the resource"
                                },
                                "publicKeyData": {
                                    "type": "string",
                                    "description": "The public key for the resource"
                                },
                                "privateKeyData": {
                                    "type": "string",
                                    "description": "Private RSA key data in the form of a BEGIN RSA PRIVATE KEY / END RSA PRIVATE KEY format"
                                },
                                "password": {
                                    "type": "string",
                                    "description": "The password needed to access the resource"
                                },
                                "passphrase": {
                                    "type": "string",
                                    "description": "SSH passphrase, if applicable for the private key. Leave empty if there is no passphrase."
                                }
                            },
                            "anyOf": [
                                { "required": ["username", "password"] },
                                { "required": ["username", "privateKeyData"]}
                            ]
                        }
                    },
                    "required": [
                        "sshPort",
                        "address",
                        "administratorAccount"
                    ]
                }

            },
            "required": [
                "computeType",
                "properties"
            ]
        }
    },
    "required": [
        "properties"
    ]
}
