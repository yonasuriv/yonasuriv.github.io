{
    "type": "object",
    "description": "Azure Machine Learning Compute Settings",
    "properties": {
        "scaleSettings": {
            "type": "object",
            "description": "Scale setting for the Azure Machine Learning Compute",
            "properties": {
                "maxNodeCount": {
                    "description": "Maximum number of nodes to use on the cluster",
                    "type": "integer",
                    "default:": 4,
                    "minimum": 1
                },
                "minNodeCount": {
                    "description": "Minimum number of nodes to use on the cluster",
                    "type": "integer",
                    "default": 0,
                    "minimun": 0
                },
                "nodeIdleTimeBeforeScaleDown": {
                    "description": "[Optional] Node idle time in seconds or ISO 8601 time format before scaling down the cluster",
                    "type": [
                        "integer",
                        "string"
                    ],
                    "default": 120,
                    "minimum": 0
                }
            },
            "required": [
                "maxNodeCount"
            ]
        }
    },
    "required": [
        "scaleSettings"
    ]
}
